% AMSMath and AMSSymb Bindings.
% Import this with "$import aztex-lib/amsmath.azx".

${
  import aztex-lib/latex.azx

  % Environments.
  export def align(body) = $environment align {$implicit_math $body}
  export def align_star(body) = $environment align* {$implicit_math $body}
  export def equation(body) = $environment equation {$implicit_math $body}
  export def math(body2) = $align_star $body2

  % Subscript/Superscript.
  export def un(t) = _$lbrace$t$rbrace
  export def ov(t) = ^$lbrace$t$rbrace

  % Basic functions.
  export let cos = #\cos
  export let sin = #\sin
  export let tan = #\tan
  export let cot = #\cot
  export let log = #\log
  export def frac(top, bottom) = $latexfn2 #\frac $top $bottom
  export def hat(value) = $latexfn1 #\hat $value
  export let int = #\int
  export let integral = #\int
  export let partial = #\partial
  export def sum(below, above) = #\sum_$lbrace$below$rbrace^$lbrace$above$rbrace
  export let rightarrow = #\rightarrow
  export let leftarrow = #\leftarrow
  export def exp(stuff) = #{e^$lbrace$stuff$rbrace}

  % Bonus functions.
  export def expfrac(stuff_num, stuff_denom) = #{e^$lbrace $frac $stuff_num $stuff_denom $rbrace}
  export def difr(var) = #{$frac d {d$var}}
  export def part(var) = #{$frac $partial {$partial$var}}

  % Constants.
  export let hbar = #\hbar

  % Visible, expanding bracket helpers.
  % (These are now default in math mode.)
  %export def parens(body) = #{\left($body\right)}
  %export def brackets(body) = #{\left[$body\right]}
  export def braces(body) = #{$leftBrace$body$rightBrace}
  export def abs(body) = #{\left|$body\right|}

  % Operators.
  export let approx = #\approx
  export let le = #\le
  export let ge = #\ge
  export let in = #\in
  export let cup = #\cup
  export let union = #\cup
  export let cap = #\cap
  export let intersection = #\cap
  export let subset = #\subset
  export let subseteq = #\subseteq
  export def max(body) = #\max$lbrace$body$rbrace
  export def Max(iter, body) = #\max\limits_$lbrace$iter$rbrace$lbrace$body$rbrace
  export def min(body) = #\max$lbrace$body$rbrace
  export def Min(iter, body) = #\min\limits_$lbrace$iter$rbrace$lbrace$body$rbrace

  % Greek letters.
  export let alpha = #\alpha
  export let Alpha = #\Alpha
  export let beta = #\beta
  export let Beta = #\Beta
  export let gamma = #\gamma
  export let Gamma = #\Gamma
  export let delta = #\delta
  export let Delta = #\Delta
  export let epsilon = #\epsilon
  export let Epsilon = #\Epsilon
  export let zeta = #\zeta
  export let Zeta = #\Zeta
  export let eta = #\eta
  export let Eta = #\Eta
  export let theta = #\theta
  export let Theta = #\Theta
  export let iota = #\iota
  export let Iota = #\Iota
  export let kappa = #\kappa
  export let Kappa = #\Kappa
  export let lambda = #\lambda
  export let Lambda = #\Lambda
  export let mu = #\mu
  export let Mu = #\Mu
  export let nu = #\nu
  export let Nu = #\Nu
  export let xi = #\xi
  export let Xi = #\Xi
  export let omicron = #\omicron
  export let Omicron = #\Omicron
  export let pi = #\pi
  export let Pi = #\Pi
  export let rho = #\rho
  export let Rho = #\Rho
  export let sigma = #\sigma
  export let Sigma = #\Sigma
  export let tau = #\tau
  export let Tau = #\Tau
  export let upsilon = #\upsilon
  export let Upsilon = #\Upsilon
  export let phi = #\phi
  export let Phi = #\Phi
  export let chi = #\chi
  export let Chi = #\Chi
  export let psi = #\psi
  export let Psi = #\Psi
  export let omega = #\omega
  export let Omega = #\Omega

  % AMSSymb.
  export let therefore = #\therefore
}


